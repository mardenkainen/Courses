<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/dark_grey"
    app:shapeAppearanceOverlay="@style/Image_Round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <com.example.presentation.view.TopCropImage
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:scaleType="matrix"
                android:src="@drawable/course_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/Image_Round" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/hasLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabCustomSize="32dp"
                app:tint="@null"
                app:maxImageSize="18dp"
                android:backgroundTint="@color/light_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/favorite_selector" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:minHeight="22dp"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@color/glass"
                android:includeFontPadding="false"
                android:text="4.9"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:icon="@drawable/star"
                app:iconSize="12dp"
                app:iconTint="@color/green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/date"
                app:cornerRadius="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/glass"
                android:includeFontPadding="false"
                android:text="22 Мая 2024"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:textColor="@color/white"
                android:minHeight="22dp"
                android:minWidth="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rating" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java-разработчик с нуля"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:letterSpacing="0.04"
                android:ellipsize="end"
                android:text="Освойте backend-разработку и программирование на Java, фреймворки "
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999 ₽"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:includeFontPadding="false"
                        android:text="Подробнее"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:padding="3dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_arrow_right"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>